#!/bin/bash

WORKSPACE=/home/matts/workspace
# get the project name
project=$(basename $1)

# switch to it if it's running
tmux switch-client -t $project
if [[ $? -eq 0 ]]; then
    exit 0
fi

# else let's make a new session and switch to it

tmux new-session -c ${WORKSPACE}/$project -d -s $project && tmux switch-client -t $project
